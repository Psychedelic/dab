type GetAddressResult = record {
    canister_name    : text;
    canister_id      : opt principal;
};

type address_list = record { {principal; text}; principal }

service : {
    "name" : () -> (text) query;

    "add_address"    : (canister_name: text, canister_id: principal) -> ();
    "remove_address" : (canister_name: text) -> ();
    "get_address"    : (canister_name: text) -> (GetAddressResult);

    "get_all"    : () -> (vec address_list);
}